--uid: type="attribute", value_type="string",description="fitbit uid"
--uis: type="attribute", value_type="string",description="fitbit uis"
--steps: type="attribute", value_type="number",description="number of steps take in a 5 minute period"
--calories: type="attribute", value_type="number",description="calories burned in a 5 minute period"
--activity: type="attribute", value_type="number",description="activity score in a 5 minute period"


